# Development Dockerfile - Hot reload support for Tilt
FROM python:3.12-slim

# Security: Create non-root user (but allow writing for dev)
RUN groupadd -r appgroup && useradd -r -g appgroup -m appuser

WORKDIR /app

# Install Python dependencies first (for better caching)
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir watchfiles

# Create app directory structure
RUN mkdir -p /app/src && chown -R appuser:appgroup /app

# Switch to non-root user
USER appuser

# Copy application code (will be overwritten by Tilt sync)
COPY --chown=appuser:appgroup src/ ./src/

# Environment variables for development
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    ENV=development

# Expose port
EXPOSE 8000

# Run with hot-reload enabled
# Uvicorn will watch for file changes and reload automatically
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "/app/src"]
