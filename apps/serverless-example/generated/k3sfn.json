{
  "app_name": "serverless-example",
  "namespace": "apps",
  "functions": [
    {
      "name": "hello_world",
      "trigger_type": "http",
      "visibility": "public",
      "path": "/api/hello",
      "resources": {
        "memory": "256Mi",
        "cpu": "100m"
      },
      "scaling": {
        "min": 0,
        "max": 10
      }
    },
    {
      "name": "process_data",
      "trigger_type": "http",
      "visibility": "internal",
      "path": "/api/process",
      "resources": {
        "memory": "512Mi",
        "cpu": "200m"
      },
      "scaling": {
        "min": 0,
        "max": 20
      }
    },
    {
      "name": "analyze_content",
      "trigger_type": "http",
      "visibility": "restricted",
      "path": "/api/analyze",
      "resources": {
        "memory": "1Gi",
        "cpu": "500m"
      },
      "scaling": {
        "min": 0,
        "max": 5
      }
    },
    {
      "name": "random_animal",
      "trigger_type": "http",
      "visibility": "public",
      "path": "/api/animal",
      "resources": {
        "memory": "128Mi",
        "cpu": "50m"
      },
      "scaling": {
        "min": 0,
        "max": 10
      }
    },
    {
      "name": "health_check",
      "trigger_type": "http",
      "visibility": "public",
      "path": "/api/health",
      "resources": {
        "memory": "256Mi",
        "cpu": "100m"
      },
      "scaling": {
        "min": 1,
        "max": 50
      }
    },
    {
      "name": "process_tasks",
      "trigger_type": "queue",
      "visibility": "private",
      "path": null,
      "resources": {
        "memory": "512Mi",
        "cpu": "200m"
      },
      "scaling": {
        "min": 0,
        "max": 10
      }
    },
    {
      "name": "send_emails",
      "trigger_type": "queue",
      "visibility": "private",
      "path": null,
      "resources": {
        "memory": "1Gi",
        "cpu": "250m"
      },
      "scaling": {
        "min": 0,
        "max": 5
      }
    },
    {
      "name": "process_images",
      "trigger_type": "queue",
      "visibility": "private",
      "path": null,
      "resources": {
        "memory": "2Gi",
        "cpu": "1"
      },
      "scaling": {
        "min": 0,
        "max": 3
      }
    },
    {
      "name": "hourly_metrics",
      "trigger_type": "schedule",
      "visibility": "private",
      "path": null,
      "resources": {
        "memory": "256Mi",
        "cpu": "100m"
      },
      "scaling": {
        "min": 0,
        "max": 10
      }
    },
    {
      "name": "daily_cleanup",
      "trigger_type": "schedule",
      "visibility": "private",
      "path": null,
      "resources": {
        "memory": "512Mi",
        "cpu": "200m"
      },
      "scaling": {
        "min": 0,
        "max": 10
      }
    },
    {
      "name": "weekly_report",
      "trigger_type": "schedule",
      "visibility": "private",
      "path": null,
      "resources": {
        "memory": "1Gi",
        "cpu": "500m"
      },
      "scaling": {
        "min": 0,
        "max": 10
      }
    }
  ]
}